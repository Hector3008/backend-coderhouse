<h2 class="text-center" style="margin-top: 2rem;"> Products from Cart with id={{cart}}</h2>
<hr />
<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <td></td>
        <td><strong>Producto</strong></td>
        <td><strong>Precio</strong></td>
        <td><strong>Cantidad</strong></td>
      </tr>
    </thead>

    <table class="table table-striped">
      <thead>
        <tr>
          <td></td>
          <td><strong>producto</strong></td>
          <td><strong>precio</strong></td>
          <td><strong>cantidad</strong></td>
        </tr>
      </thead>
    
      <tbody>
    
        {{#each products}}
    
        <tr>
          <td><button class="btn btn-danger" onclick="">delete</button></td>
 
          <td><a href="http://localhost:8080/products/{{this._id}}">{{this.product.title}}</a></td>
          <td>{{this.product.price}}$</td>
          <td>{{this.quantity}}</td>
        </tr>
        {{/each}}
      </tbody>
    
    </table>
